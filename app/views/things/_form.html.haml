= form_for @thing do |f|
  - if @thing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thing.errors.count, "error")} prohibited this thing from being saved:"
      %ul
        - @thing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :edit
    = f.text_field :edit
  .field
    = f.label :new
    = f.text_field :new
  .field
    = f.label :show
    = f.text_field :show
  .actions
    = f.submit 'Save'
